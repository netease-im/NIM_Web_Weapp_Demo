.calling-coverview {
  position:relative;
  background:rgba(0,0,0,0.50);
  width:100%;
  bottom:0;
  height:100%;
}
.calling-control {
  position: absolute;
  bottom:88rpx;
  color:#fff;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  padding: 0 60rpx;
  box-sizing: border-box;
  width: 100%;
}
.calling-image-wrpper {
  display:inline-block;
  text-align:center;
}
.calling-control .cover-image {
  width:140rpx;
  height:140rpx;
  margin-bottom:20rpx;
}
.video-wrapper {
  width: 100%;
  height: 100%;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}
.control-wrapper {
  position: fixed;
  bottom: 18px;
  left:0;
  display: flex;
  width: 100%;
  box-sizing: border-box;
  flex-direction:row;
  justify-content: space-between;
  padding: 0 42rpx;
}
.control-wrapper .item{
  width: 92rpx;
  height: 92rpx;
}